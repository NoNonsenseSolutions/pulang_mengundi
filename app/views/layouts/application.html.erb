<!DOCTYPE html>
<html>
  <head>
    <title>PulangMengundi</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">

    <% if Rails.env.production? %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga("create", "UA-117450354-2", "auto");
      </script>
    <% end %>

    <%= yield :custom_meta %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <div id="fb-root"></div>
    <div class="bg-black text-center" style="height: 20px;">
      <%= link_to "Back to #pulangmengundi main site", 'https://www.pulangmengundi.com', class: 'text-primary-orange' %>
    </div>
    <%= render 'layouts/navbar' %>
    <div class="<%= @notification_presenter.container_class %>">
      <span><%= @notification_presenter.text %></span>
      <%= @notification_presenter.button %>
    </div>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
    <% end %>
    <div class="container pb-5">
      <%= yield %>
    </div>

    <%= yield :modal %>
  </body>
</html>
