.row
  .col-sm-6.col-sm-offset-3.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4
    div.text-center
      - unless @user.facebook_link
        = image_tag 'icon_facebook.svg', style: 'height: 24px'
        = link_to '/auth/facebook', class: 'btn btn-primary ml-3' do
          span Click here to connect your facebook account

    div.text-center
      - unless @user.twitter_link
        = image_tag 'icon_twitter.svg', style: 'height: 24px'
        = link_to '/auth/twitter', class: 'btn btn-primary ml-3' do
          span Click here to connect your twitter account.

    = simple_form_for @user, url: profiles_path, html: {class: 'mt-5'} do |f|

      = f.input :email, label: "Email", wrapper_html: { class: 'mb-0'}

      - if @user.unconfirmed_email
        p.mb-0 
          | Check your email to confirm #{@user.unconfirmed_email} belongs to you. 
        small = link_to "Resend Email", profiles_path({user: {email: @user.unconfirmed_email}}), method: :patch, class: 'text-link'


      = f.input :email_public, label: 'Set email to public. (Helps donors to contact you if your social media is private)', class: 'mt-5'

      div.row.mt-5
        div.col-xs-4
          = f.input :phone_area_code, collection: PhoneAreaCode.list, selected: f.object.phone_area_code || '60', input_html: { class: 'selectpicker pr-0', data: { 'live-search' => true }}, label: "Area"
        div.col-xs-8
          = f.input :phone_number, label: 'Phone Number(Optional)'
      = f.submit 'Save', class: 'btn btn-primary btn-responsive'