.row
  .col-sm-6.col-sm-offset-3.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4
    .switch
      = link_to "Sponsor Others", requests_path, class: "switch-items active"
      = link_to "Need A Sponsor", root_path, class: "switch-items"
    h2.text-center Voter requests
    - @requests.each do |request|
      = link_to request, class: 'no-style' do
        .request-card
          .request-card-body
            .space-out-column
              = image_tag request.display_pic, class: 'img-responsive'
            div.space-out-column.ml-3
              div 
                big #{request.requester.name}
              div
                div.font-size-tiny style='font-weight: 300' SEAT: #{request.to_city}
                div.font-size-tiny style='font-weight: 300' STATE: #{request.to_state}
            div.space-out-column.ml-3
              div.text-right
                small #{request.created_at.strftime("%d/%m/%Y")}
              div.text-right
                small #{request.successful_pledges_percentage}% funded
                br
                big #{number_to_currency request.remaining_balance, unit: 'RM '}
