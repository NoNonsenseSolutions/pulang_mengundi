  .col-sm-6.col-sm-offset-3.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4
    .vertical-center
      div
        h3.text-center.font-weight-semibold = t('.find_us_on_social_media')
        .mt-5
          .social-media-box
            div.text-center
              = link_to 'https://facebook.com/pulangmengundi/' do
                = image_tag 'icon_facebook.svg', style: 'height: 50px'
            div.text-center
              = link_to 'https://twitter.com/pulangundi' do
                = image_tag 'icon_twitter.svg', style: 'height: 50px'
            div.text-center
              = link_to 'https://www.instagram.com/pulangmengundi/' do
                = image_tag 'icon_instagram.svg', style: 'height: 50px'

        = link_to 'mailto:pulang.undi@gmail.com' do
          h3.text-center.font-weight-semibold.mt-5 pulang.undi@gmail.com